CompileFlags:
  Add: [
    # allow clangd to find OpenSSL's header files
    "-I/opt/homebrew/Cellar/openssl@3/3.3.2/include",
    "-L/opt/homebrew/Cellar/openssl@3/3.3.2/lib",
    "-Wall", 
    "-Wextra", 
    "-Wpedantic", 
    "-Wmissing-prototypes", 
    "-Wredundant-decls", 
    "-Wshadow", 
    "-Wpointer-arith", 
    "-O3", 
    "-fomit-frame-pointer",
  ]
